<!--Header Section-->
<%- include ("partials/_header") -%>


  <body>
    <!--Navigation Section-->
    <%- include("partials/_navigation") -%>

      <div class="container ">
        <div class="row">
          <div class="first-paragraf">
            <h1>Contact Us</h1>
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sequi, quos eius aperiam neque similique, cum
              iste soluta obcaecati beatae ratione laudantium molestiae minus. Sint recusandae facere similique sequi
              iusto eveniet.</p>
          </div>
          <div class="col-sm-4">
            <div class="row">
              <div class="col-sm-2" style="display: inline-block !important;">
                <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
              </div>
              <div class="col-sm-8">
                <div class="icon-description">
                  <h2 class="h2-contact">Adress</h2>
                  <p class="p-contact">Mr John Smith
                    132, My Street,
                    Kingston, New York 12401
                    United States</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-2">
                <div class="icon"><i class="fas fa-phone-alt"></i></div>
              </div>
              <div class="col-sm-8">
                <div class="icon-description">
                  <h2 class="h2-contact">Phone</h2>
                  <p class="p-contact">+90 545 657 79 93</p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-2">
                <div class="icon"><i class="fas fa-envelope"></i></div>
              </div>
              <div class="col-sm-8">
                <div class="icon-description">
                  <h2 class="h2-contact">Email</h2>
                  <p class="p-contact">example@gmail.com</p>
                </div>
              </div>
            </div>
          </div>

          <div class="col-sm-6 contact-form">

            <div>
              <% if(flashMessages) { %>
                <% if(flashMessages.success) { %>
                  <div class="alert alert-success">
                    <%= flashMessages.success %>
            </div>

              <% } else if(flashMessages.error) { %>
                    <div class="alert alert-danger">
                      <%= flashMessages.error %>
                    </div>
              <% } %>
              <% } %>
            </div>

            <form method="POST" action="/contact" style="text-align: center;">
              <h2>Send Message</h2>
              <div class="input-box">
                <input class="input-text" type="text" name="fullname" required="required" placeholder="Full Name">
              </div>
              <div class="input-box">
                <input class="input-text" type="text" name="email" required="required" placeholder="Email">
              </div>
              <div class="input-box">
                <textarea style="height: 100px;" name="message" required="required"
                  placeholder="Type Your Message..."></textarea>
              </div>
              <div class="">
                <input class="submitButton" type="submit" value="Send">
              </div>
            </form>
          </div>
        </div>
      </div>











      <!--Footer Section-->
      <%- include ("partials/_footer") -%>



  </body>

  </html>